<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.grupp8DAT255.studiekoll.GraphActivity$PlaceholderFragment" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/message"
        android:textStyle="bold" />

    <!-- HÄR SKA TIMMAR FRÅN DATABAS LÄGGAS IN SOM VISAD TEXT -->

    <TextView
        android:id="@+id/invested_hours_text_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center_horizontal|center_vertical"
        android:lines="1"
        android:text=""
        android:textSize="100sp" />

    <!-- Bottom control layout -->
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal" >
    
        <!-- Date/category control layout -->
        <LinearLayout 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" >
        
            <!-- From date control layout -->
        	<LinearLayout 
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal" >        
        
        		<TextView
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:text="@string/from_prompt" />
        
    			<Spinner
    			    android:id="@+id/from_year_spinner"
    			    android:layout_width="wrap_content"
    			    android:layout_height="wrap_content"
    			    android:prompt="@string/year_prompt"
    			    android:spinnerMode="dialog" />

				<Spinner
				    android:id="@+id/from_month_spinner"
				    android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:prompt="@string/month_prompt"
    			    android:spinnerMode="dialog" />

				<Spinner
		    		android:id="@+id/from_day_spinner"
		    		android:layout_width="wrap_content"
	    			android:layout_height="wrap_content" 
	    			android:prompt="@string/day_prompt"
    			    android:spinnerMode="dialog" />

			</LinearLayout> <!-- From date control layout end -->

			<!-- To date control layout -->
			<LinearLayout 
	   			android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:orientation="horizontal" >

	   			<TextView
	   			    android:layout_width="wrap_content"
	   			    android:layout_height="wrap_content"
	   			    android:layout_marginRight="10dp"
	   			    android:text="@string/to_prompt" />

				<Spinner
			    	android:id="@+id/to_year_spinner"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:prompt="@string/year_prompt"
    			    android:spinnerMode="dialog" />

				<Spinner
				   	android:id="@+id/to_month_spinner"
		    		android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:prompt="@string/month_prompt"
    			    android:spinnerMode="dialog" />

				<Spinner
			    	android:id="@+id/to_day_spinner"
					android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:prompt="@string/day_prompt"
    			    android:spinnerMode="dialog" />

			</LinearLayout> <!-- To date control layout end -->

			<!-- Category control -->
			<LinearLayout 
			    android:layout_width="fill_parent"
       			android:layout_height="fill_parent"
       			android:orientation="horizontal" >

			    <TextView
	   			    android:layout_width="0dp"
	   			    android:layout_weight="1"
	   			    android:layout_height="wrap_content"
	   			    android:text="@string/category_prompt" />

				<Spinner 
			    	android:id="@+id/show_category_spinner"
			    	android:layout_width="0dp"
			    	android:layout_weight="2"
			    	android:layout_height="wrap_content"
			    	android:spinnerMode="dialog"
			    	android:prompt="@string/category_spinner_prompt" />	    

			</LinearLayout> <!-- Category control ends -->

		</LinearLayout> <!-- Date/category control layout end-->

		<!-- Button layout -->	
		<LinearLayout 
		    android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:orientation="vertical"
       		android:gravity="center_horizontal|center_vertical">

		    <Button 
	        	android:layout_width="fill_parent"
	        	android:layout_height="fill_parent"
	        	android:text="@string/show_button_text"
	        	android:gravity="center_horizontal|center_vertical"
	        	android:onClick="showGraph" />

		    <Button 
	        	android:layout_width="fill_parent"
	        	android:layout_height="fill_parent"
	        	android:text="@string/show_details_button_text"
	        	android:gravity="center_horizontal|center_vertical"
	        	android:onClick="showDetails" />

		</LinearLayout> <!-- Button layout ends -->

    </LinearLayout> <!-- Bottom control layout end --> 
    
</LinearLayout>